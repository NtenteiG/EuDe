<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/lights_layout"
    android:layout_height="match_parent"
    android:background="@drawable/b82"
    tools:context=".Lights">

    <ImageView
        android:id="@+id/lights_logo"
        android:layout_width="222dp"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/lights_on" />

    <ImageView
        android:id="@+id/lightostxt"
        android:layout_width="273dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="217dp"
        app:srcCompat="@drawable/lights_t" />

    <net.colindodd.toggleimagebutton.ToggleImageButton xmlns:tib="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lights_btn"
        android:layout_width="104dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        tib:tib_drawable_off="@drawable/switch_off"
        tib:tib_drawable_on="@drawable/switch_on" />

</RelativeLayout>